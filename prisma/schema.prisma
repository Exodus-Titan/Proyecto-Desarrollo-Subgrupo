// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             Int     @id @default(autoincrement())
  nombre_usuario String  @unique
  email          String  @unique
  clave          String
  nombre         String
  cursos         Int[]
  estado         Boolean @default(false)
  tipo           String //Estudiante, Profesor o Administrador, pero como tienen los mismos atributos no hay porque diferenciarlos en la base de datos
  Curso          Curso[]
}

model Curso {
  id             Int       @id @default(autoincrement())
  titulo         String
  descripcion    String
  categoria      String
  palabras_clave String[]
  estudiantes    Int[]
  profesor       Usuario   @relation(fields: [id_profesor], references: [id])
  id_profesor    Int
  estado         String
  Leccion        Leccion[]
}

model Leccion {
  id             Int      @id @default(autoincrement())
  titulo         String
  descripcion    String
  categoria      String
  palabras_clave String[]
  curso          Curso    @relation(fields: [id_curso], references: [id])
  id_curso       Int
}

model Correo {
  correo String @id
  clave  String
}
